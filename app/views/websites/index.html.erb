<p id="notice"><%= notice %></p>

<h1>Websites</h1>

<table class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Status</th>
      <th>Lastchecked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
    
    <% website.check_now %>

      <tr>
        <td><%= website.url %></td>
        <td><%= website.status %></td>
        <td><%= website.lastchecked %></td>
        <td><%= link_to 'Check Now', website, remote: true, class: 'link-check-now' %></td>
        <td><%= link_to 'Edit', edit_website_path(website) %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Website', new_website_path, class: 'btn btn-primary' %>
